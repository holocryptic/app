<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<h2> Comments: </h2>
<%= @post.comments.each do |comment| %>
  <p>
    <b> Commenter:</b>
    <%=comment.commentor %>
  </p>

  <p>
    <b> Comment: </b>
    <%=comment.body %>
  </p>
 

<h2> Add A COMMENT</h2>
<%= form_for ([@post, @post.comment.build]) do |f| %>
  <div class="field">
    <%= f.label :title %> <br />
    <%= f.text_field :title %>
  </div> 
  <div class="field">
    <%= f.label :text %> <br />
    <%= f.text_field :text %>
  </div> 
  <div class="action">
    <%= f.submit %> <br />
  </div> 
 <% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<% end %>

